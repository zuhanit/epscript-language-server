{
	"name": "eps-server",
	"description": "Language Server for epScript.",
	"author": "Zuhanit",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "zuhanit",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:epscript",
		"workspaceContains:*.eps"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "epscript",
				"aliases": [
					"epScript"
				],
				"extensions": [
					".eps"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "epScript",
			"properties": {
				"epscript.welcome": {
					"type": "boolean",
					"default": "true",
					"markdownDescription": "Notify `Getting Started` when plugin enabled."
				},
				"epscript.language": {
					"type": "string",
					"default": "English",
					"enum": [
						"English",
						"한국어"
					],
					"enumDescriptions": [
						"Set language configuration to English",
						"언어 설정을 한국어로 합니다."
					],
					"description": "Language configuration for any messages from epScript Server, like Diagnostics."
				}
			}
		},
		"grammars": [
			{
				"language": "epscript",
				"scopeName": "source.eps",
				"path": "./syntaxes/epScript.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^8.2.2",
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"eslint": "^7.26.0",
		"mocha": "^8.3.2",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"antlr4-c3": "^2.0.2",
		"antlr4ts": "^0.5.0-alpha.4",
		"vscode-uri": "^3.0.3"
	}
}
